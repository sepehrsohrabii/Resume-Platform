<html>

<head>
    <%- include('layout/head'); -%>
        <link href="/assets/css/signin.css" rel="stylesheet">
</head>

<body>

    <body data-new-gr-c-s-check-loaded="14.1026.0" data-gr-ext-installed="">
        <div class="container">
            <form class="form-signin" action="/reset?token=<%= token %> " method="POST">
                <a class="blog-header-logo text-dark" href="/">Ehsan Gazar Blog</a>
                <br />
                <br />
                <% for (const key in flash) { %>
                    <div class="alert alert-<%= key === 'error'?'danger':key %>" role="alert">
                        <%= flash[key] %>
                    </div>
                    <% } %>
                        <br />
                        <h1 class="h3 mb-3 font-weight-normal">Change your password</h1>
                        <label for="inputPassword" class="sr-only">New Password</label>
                        <input name="password" type="password" id="inputPassword" class="form-control"
                            placeholder="New Password" required="" autocomplete="off"
                            style="background-image: url(&quot;data:image/png;base64,&quot;); background-repeat: no-repeat; background-attachment: scroll; background-size: 16px 18px; background-position: 98% 50%; cursor: auto;">
                        <% errors.forEach(error=> { %>
                        <div class="alert alert-danger" role="alert">
                            <%= error.param %> - <%= error.msg %>
                        </div>
                        <% }) %>
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Reset Password</button>
                        <br />
                        <a href="/login">Login</a>
                        <br />
                        <a href="/signup">Signup</a>
                        <br />
                        <p class="mt-5 mb-3 text-muted">Â© 2021</p>
            </form>

        </div>
    </body>
</body>

</html>