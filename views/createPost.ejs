<%- include('header'); -%>
<div class="container">
  <div class="row p-5 bg-color-two rounded-4 mb-4">
    <div class="col text-center h2">DASHBOARD/CREATE-POST</div>
  </div>
  <div class="row p-5 bg-color-two rounded-4 mb-4">
    <div class="container">
      <div class="row">
        <div class="col">
          <form
            action="/dashboard/create"
            method="POST"
            class=""
            enctype="multipart/form-data"
          >
            <div class="container">
              <div class="row">
                <div class="col">
                  <h4 class="mb-3">Create New Post</h4>
                  <% for (const key in flash) { %>
                  <div
                    class="alert alert-<%= key === 'error'?'danger':key %>"
                    role="alert"
                  >
                    <%= flash[key] %>
                  </div>
                  <% } %>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <label for="inputName" class="sr-only">Title</label>
                  <input
                    name="title"
                    type="text"
                    id="inputName"
                    class="form-control"
                    placeholder="Title"
                    required=""
                    autofocus=""
                    autocomplete="off"
                  />
                </div>
                <div class="col">
                  <label for="inputName" class="sr-only">Image</label>
                  <input
                    name="image"
                    type="file"
                    id="inputName"
                    class="form-control"
                    placeholder="Title"
                    required=""
                    autofocus=""
                    autocomplete="off"
                  />
                </div>
              </div>
              <div class="row my-3">
                <div class="col">
                  <label for="inputEmail" class="sr-only">Description</label>
                  <textarea
                    name="description"
                    type="text"
                    id="inputEmail"
                    class="form-control"
                    placeholder="Description"
                  ></textarea>
                </div>
              </div>
              <div class="row my-3">
                <div class="col">
                  <% errors.forEach(error=> { %>
                  <div class="alert alert-danger" role="alert">
                    <%= error.param %> - <%= error.msg %>
                  </div>
                  <% }) %>
                </div>
              </div>
              <div class="row justify-content-end">
                <div class="col-2">
                  <button class="button-1 w-100 rounded-3 py-2" type="submit">
                    Create
                  </button>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('footer'); -%>
